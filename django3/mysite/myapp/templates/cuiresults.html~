    <!--Load the AJAX API. Code references google charts API documentation-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

      // Load the Visualization API and the corechart package.
    google.charts.load('current', {'packages':['corechart']});

      // Set a callback to run when the Google Visualization API is loaded.
    google.charts.setOnLoadCallback(drawChart);

      // Callback that creates and populates a data table, creates a chart, and draws it.

    function drawChart() {
        
        // Create the data table. This is graph one and displays rating of cuisines in top cities in a bar graph.
        var data0 = new google.visualization.DataTable();
        data0.addColumn('string', 'Cuisine');
        data0.addColumn('number', 'Rating');
        data0.addRows({{bar1|safe}});

        // Set chart options
        var options0 = {'title':'Cities with Best {{cuisine}} by Rating ',
                       'width':600,
                       'height':300};

        // Instantiate and draw our chart, passing in some options.
        var chart0 = new google.visualization.BarChart(document.getElementById("chart_div0"));
        chart0.draw(data0, options0);


        // Create the data table. This is graph one and displays number of restaurants in each of the top cities for given cuisine in a bar graph.
        var data0 = new google.visualization.DataTable();
        var data1 = new google.visualization.DataTable();
        data1.addColumn('string', 'Cuisine');
        data1.addColumn('number', 'Number of Restaurants');
        data1.addRows({{bar2|safe}});

        // Set chart options
        var options1 = {'title':'Number of Restaurants for Top Cities with {{cuisine}} ',
                       'width':600,
                       'height':300};

        // Instantiate and draw our chart, passing in some options.
        var chart1 = new google.visualization.BarChart(document.getElementById("chart_div1"));
        chart1.draw(data1, options1);
    }

       
    </script>

</head>

